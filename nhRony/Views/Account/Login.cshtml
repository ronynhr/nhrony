@model ClearingAndForwarding.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 65vh;">
    <div class="card p-3 shadow-lg" style="width: 100%; max-width: 350px; border-radius: 8px;">

        <form asp-action="Login" method="post">
            <div class="mb-2">
                <label asp-for="Username" class="form-label" style="font-weight: 500;">Username</label>
                <input asp-for="Username" class="form-control" style="height: 36px; font-size: 0.9rem;" placeholder="Enter your username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Password" class="form-label" style="font-weight: 500;">Password</label>
                <input asp-for="Password" type="password" class="form-control" style="height: 36px; font-size: 0.9rem;" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Button Container with Login and Cancel -->
            <div class="d-flex justify-content-between mb-3">
                <button type="submit" class="btn btn-primary" style="font-size: 1rem; padding: 6px; border-radius: 5px; transition: background-color 0.3s; width: 48%;">Login</button>
                <button type="button" class="btn btn-secondary" style="font-size: 1rem; padding: 6px; border-radius: 5px; transition: background-color 0.3s; width: 48%;">Cancel</button>
            </div>

        </form>

        <p class="text-center mt-3" style="font-size: 0.9rem; color: #666;">
            <a href="#" style="color: #007bff;">Forgot Password?</a> |
            <a asp-controller="Account" asp-action="Register" style="color: #007bff;">Sign Up</a>
        </p>
        <h4></h4>
        <!-- Language Selector -->
        <div class="mb-3">
            <label for="languageSelector" class="form-label" style="font-weight: 500;">Language</label>
            <select id="languageSelector" class="form-control" style="height: 36px; font-size: 0.9rem;">
                <option value="en" selected>English</option>

                <!-- Add more languages as needed -->
            </select>
        </div>
    </div>

</div>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
}
<script>
    document.querySelector('.btn-secondary').addEventListener('click', function () {
        document.querySelector('form').reset(); // Reset the form fields
    });
</script>
