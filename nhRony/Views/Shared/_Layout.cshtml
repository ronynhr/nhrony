<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ClearingAndForwarding.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between align-items-center">
                    <!-- Left side navigation links -->
                    <ul class="navbar-nav flex-grow-1">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary ms-2">Home Page</a>
                        <a asp-controller="Employees" asp-action="Index" class="btn btn-outline-secondary ms-2">Employees</a>
                        <a asp-controller="Expenses" asp-action="Index" class="btn btn-outline-secondary ms-2">Expenses</a>
                        <a asp-controller="BEdetails" asp-action="Index" class="btn btn-outline-secondary ms-2">BE List</a>
                        <a asp-controller="UnitNames" asp-action="Index" class="btn btn-outline-secondary ms-2">Unit Names</a>
                        <a asp-controller="Quotations" asp-action="Index" class="btn btn-outline-secondary ms-2">Quotation</a>
                        <a asp-controller="Requisitions" asp-action="Index" class="btn btn-outline-secondary ms-2">Requisition</a>
                        <a asp-controller="Home" asp-action="Import" class="btn btn-outline-secondary ms-2">Import</a>

                    </ul>

                    <!-- Center greeting for authenticated user -->
                    <div class="text-center mx-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <span class="navbar-text">Hello, @User.Identity.Name!</span>
                        }
                    </div>

                    <!-- Right side login/logout links -->
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-outline-secondary ms-2">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary ms-2">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Designed and developed by Nahid Hossain - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
