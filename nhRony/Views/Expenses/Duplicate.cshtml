@model IEnumerable<dynamic> // Use a suitable model type here

<div>
    <h4>Duplicate Expenses</h4>

    @if (!Model.Any())
    {
        <p>No duplicate expenses found.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>BEno</th>
                    <th>File No</th>
                    <th>Bill Date</th>
                    <th>Count</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var group in Model)
                {
                    <tr>
                        <td>@group.BEno</td>
                        <td>@group.FileNo</td>
                        <td>@group.BillDate?.ToString("yyyy-MM-dd")</td>
                        <td>@group.Count</td>
                        <td>
                            <ul>
                                @foreach (var expense in group.Expenses)
                                {
                                    <li>
                                        ID: @expense.Id, Amount: @expense.BillAmount.ToString("N2")
                                    </li>
                                }
                            </ul>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<a asp-action="Index" class="btn btn-primary">Back to List</a>
